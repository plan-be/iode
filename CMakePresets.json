{
  "version": 2,
  "configurePresets": [
    {
      "name": "default-x64",
      "hidden": true,
      "displayName": "Default x64 Config",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "linux-x64",
      "inherits": "default-x64",
      "hidden": true,
      "displayName": "Linux x64",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Linux" ] },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}" }
      }
    },
    {
      "name": "linux-x64-debug",
      "inherits": "linux-x64",
      "displayName": "Linux x64 Debug",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      }
    },
    {
      "name": "test-linux-x64-debug",
      "inherits": "linux-x64-debug",
      "displayName": "Test Linux x64 Debug",
      "binaryDir": "${sourceDir}/out/build/linux-x64-debug/tests/test_cpp_api"
    },
    {
      "name": "linux-x64-release",
      "inherits": "linux-x64",
      "displayName": "Linux x64 Release",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      }
    },
    {
      "name": "test-linux-x64-release",
      "inherits": "linux-x64-release",
      "displayName": "Test Linux x64 Release",
      "binaryDir": "${sourceDir}/out/build/linux-x64-release/tests/test_cpp_api"
    },
    {
      "name": "windows-x64",
      "inherits": "default-x64",
      "hidden": true,
      "displayName": "Windows x64",
      "description": "Target Windows with the Visual Studio development environment.",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Windows" ] } }
    },
    {
      "name": "windows-x64-debug",
      "inherits": "windows-x64",
      "displayName": "Windows x64 Debug",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      }
    },
    {
      "name": "test-windows-x64-debug",
      "inherits": "windows-x64-debug",
      "displayName": "Test Windows x64 Debug",
      "binaryDir": "${sourceDir}/out/build/windows-x64-debug/tests/test_cpp_api"
    },
    {
      "name": "windows-x64-release",
      "inherits": "windows-x64",
      "displayName": "Windows x64 Release",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      }
    },
    {
      "name": "test-windows-x64-release",
      "inherits": "windows-x64-release",
      "displayName": "Test Windows x64 Release",
      "binaryDir": "${sourceDir}/out/build/windows-x64-release/tests/test_cpp_api"
    }
  ],
  "buildPresets": [
    {
      "name": "linux-x64-debug",
      "configurePreset": "linux-x64-debug"
    },
    {
      "name": "linux-x64-release",
      "configurePreset": "linux-x64-release"
    },
    {
      "name": "windows-x64-debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release"
    }
  ],
  "testPresets": [
    {
      "name": "test-default",
      "hidden": true,
      "output": {
        "verbosity": "verbose",
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": false
      }
    },
    {
      "name": "linux-x64-debug",
      "inherits": "test-default",
      "configurePreset": "test-linux-x64-debug"
    },
    {
      "name": "linux-x64-release",
      "inherits": "test-default",
      "configurePreset": "test-linux-x64-release"
    },
    {
      "name": "windows-x64-debug",
      "inherits": "test-default",
      "configurePreset": "test-windows-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "inherits": "test-default",
      "configurePreset": "test-windows-x64-release"
    }
  ]
}
